  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\StellarMap.Application\StellarMap.Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\Factions.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\Planet Classifications.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\Star Classifications.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Assets\Star Names.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
